# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/linkmanager
# OR use individual parameters:
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=linkmanager
# DB_USER=username
# DB_PASSWORD=password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-long-change-in-production

# Server Configuration
NODE_ENV=development
PORT=3003

# Redis Configuration (Optional - graceful degradation)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_USER=default

# Bcrypt Configuration
BCRYPT_ROUNDS=8

# Sentry Configuration (Optional - error monitoring)
SENTRY_DSN=

# Backup Configuration (Required for backup scripts)
# Encryption key - MUST be at least 32 characters, keep it secret!
BACKUP_ENCRYPTION_KEY=your-super-secret-encryption-key-minimum-32-chars

# DigitalOcean Spaces Configuration
DO_SPACES_KEY=your-spaces-access-key
DO_SPACES_SECRET=your-spaces-secret-key
DO_SPACES_BUCKET=your-bucket-name
DO_SPACES_REGION=nyc3

# Backup Settings (Optional)
BACKUP_RETENTION_DAYS=7
BACKUP_DIR=./backups
