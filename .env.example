# ==========================================
# SUPABASE CONFIGURATION
# ==========================================
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# ==========================================
# DATABASE CONFIGURATION (Supabase PostgreSQL)
# ==========================================
DB_HOST=your-project-id.supabase.co
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=your-database-password
# Note: Get these values from Supabase Dashboard -> Settings -> Database

# ==========================================
# APPLICATION CONFIGURATION
# ==========================================
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000

# ==========================================
# JWT CONFIGURATION
# ==========================================
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-long-change-in-production
JWT_EXPIRES_IN=7d

# ==========================================
# REDIS CONFIGURATION (Optional - for queue/cache)
# ==========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_USER=default

# ==========================================
# EMAIL CONFIGURATION (Optional)
# ==========================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=noreply@linkmanager.com

# ==========================================
# LOGGING
# ==========================================
LOG_LEVEL=info
LOG_DIR=logs

# ==========================================
# SECURITY
# ==========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_ROUNDS=8

# ==========================================
# CRON JOBS
# ==========================================
ENABLE_CRON=true
CRON_AUTO_RENEWAL=true
CRON_CLEANUP_LOGS=true

# ==========================================
# SENTRY (Optional - Error tracking)
# ==========================================
SENTRY_DSN=

# ==========================================
# BACKUP CONFIGURATION (Optional)
# ==========================================
# Encryption key - MUST be at least 32 characters
BACKUP_ENCRYPTION_KEY=your-super-secret-encryption-key-minimum-32-chars
BACKUP_RETENTION_DAYS=7
BACKUP_DIR=./backups

# ==========================================
# DIGITALOCEAN SPACES (Optional - for backup storage only)
# Note: This is for S3-compatible backup storage, NOT database
# ==========================================
DO_SPACES_KEY=your-spaces-access-key
DO_SPACES_SECRET=your-spaces-secret-key
DO_SPACES_BUCKET=your-bucket-name
DO_SPACES_REGION=nyc3

# ==========================================
# CRYPTOCLOUD PAYMENT (Optional)
# ==========================================
# Get credentials from https://cryptocloud.plus/dashboard
CRYPTOCLOUD_API_KEY=your-api-key
CRYPTOCLOUD_SHOP_ID=your-shop-id
CRYPTOCLOUD_SECRET_KEY=your-secret-key-for-webhook-verification

# ==========================================
# RESEND EMAIL (Optional)
# ==========================================
# Get API key from https://resend.com/api-keys
# Domain must be verified in Resend dashboard
RESEND_API_KEY=re_your-api-key
RESEND_FROM_EMAIL=noreply@yourdomain.com
RESEND_FROM_NAME=YourAppName
