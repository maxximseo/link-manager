{
  "name": "link-manager",
  "version": "2.0.0",
  "description": "WordPress Link Manager - Modular Architecture",
  "main": "backend/server-new.js",
  "scripts": {
    "dev": "nodemon backend/server-new.js",
    "dev:auto": "bash scripts/start-dev-with-auto-commit.sh",
    "start": "node backend/server-new.js",
    "start:modular": "node backend/server-new.js",
    "start:legacy": "node backend/server.js",
    "commit": "bash scripts/auto-commit.sh",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --forceExit",
    "lint": "eslint backend/ tests/ --ignore-pattern 'backend/build/**'",
    "lint:fix": "eslint backend/ tests/ --ignore-pattern 'backend/build/**' --fix",
    "format": "prettier --write \"backend/**/*.js\" \"tests/**/*.js\" --ignore-path .prettierignore",
    "format:check": "prettier --check \"backend/**/*.js\" \"tests/**/*.js\" --ignore-path .prettierignore"
  },
  "dependencies": {
    "@sentry/node": "^10.28.0",
    "axios": "^1.12.2",
    "bcryptjs": "^3.0.2",
    "bull": "^4.10.4",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "express-validator": "^7.0.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.8.0",
    "jsonwebtoken": "^9.0.0",
    "node-cron": "^3.0.3",
    "pg": "^8.11.0",
    "winston": "^3.8.2",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "nodemon": "^2.0.22",
    "prettier": "^3.7.4",
    "supertest": "^7.1.4"
  }
}
